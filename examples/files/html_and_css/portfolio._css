@import url('http://fonts.cdnfonts.com/css/gordita');

* {
  box-sizing: border-box;
}

/* Reset */
body,
ul,
ol,
h1,
h2,
h3,
h4,
h5,
h6,
label,
blockquote {
  padding: 0;
  margin: 0;
  border: 0;
}

html {
  background-color: #222;
  font-size: 62.5%;
}

body {
  color: rgb(255, 247, 247);
  font-family: 'Gordita';
  font-size: 1.8rem;
}

h1 {
  font-size: 6.4rem;
  font-weight: 400;
  margin-bottom: 24px;
}

main {
  max-width: 1120px;
  margin: 0 auto;
  padding: 128px 96px;
}

.container {
  display: flex;
}

/* @media (max-width: 600px) {
  .container {
    flex-direction: column;
  }
} */

.left-container {
  flex: 0 0 200px;
  margin-top: 116px;
}

.right-container {
  flex: 1;
}

.navigation-items {
  display: flex;
  flex-direction: column;
  list-style-type: none;
}

.navigation-list-item {
  margin-bottom: 1rem;
  margin-right: 1rem;
}

a {
  color: white;
}

section {
  margin-top: 20px;
  margin-bottom: 40px;
}

#devin-image {
  width: 250px;
  height: 250px;
  border-radius: 50%;
  object-fit: cover;
  float: right;
  border: 2px solid white;
  margin-left: 40px;
  margin-bottom: 40px;
}

ul {
  list-style-position: inside;
}

ul > li {
  margin-bottom: 1rem;
}

form {
  display: flex;
  flex-direction: column;
  padding: 20px;
  background-color: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(0, 0, 0, 0.5);
}

.form-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20px;
}

.form-row:last-child {
  margin-bottom: 0;
}

.form-row > label {
  flex: 0 0 100px;
  display: inline-block;
  text-align: right;
  margin-right: 20px;
}

.form-row > input,
.form-row > select {
  padding: 0.8rem;
  border: none;
  font-size: 1.8rem;
  background-color: #444;
  border: 1px solid #aaa;
  border-radius: 2px;
  color: white;
  min-width: 0;
}

.form-row > select > option {
  background-color: #444;
}

.form-row > input,
.form-row > select {
  flex: 1 1 0%;
}

.form-row > select {
  padding-right: 20px;
}

.form-row > input::placeholder {
  color: rgba(255, 255, 255, 0.4);
}

.submit-form-row {
  justify-content: flex-end;
}

.youtube-embed {
  width: 100%;
  height: 500px;
}

:root {
  --color-magenta: #ff4daf;
  --color-violet: #ba8ef2;
  --color-teal: #5dd1c6;
  --color-aqua: #46c6ff;
}

.magenta {
  color: var(--color-magenta);
}
.violet {
  color: var(--color-violet);
}
.teal {
  color: var(--color-teal);
}
.aqua {
  color: var(--color-aqua);
}

button {
  background-color: var(--color-violet);
  padding: 1.2rem 2.4rem;
  border: none;
  font-size: 1.8rem;
  border: 1px solid white;
  border-radius: 2px;
  color: white;
  font-weight: bold;
  box-shadow: 0 1px 4px black;
  transition: 0.5s;
}

button:hover {
  background-color: #a071dd;
  border-color: transparent;
}

button:active {
  background-color: #6b38ad;
  border-color: transparent;
}

blockquote {
  margin: 20px;
  font-style: italic;
}

blockquote::before {
  content: '';
  font-style: normal;
  display: inline-block;
  width: 48px;
  height: 48px;
  border-radius: 4px;
  background-color: #795548;
  vertical-align: middle;
  margin-right: 20px;
  margin-bottom: 10px;
  background-image: url('https://webdev.express/static/quotes.png');
}

@media screen and (max-width: 1200px) {
  main {
    padding: 64px;
  }
}

@media (max-width: 600px) {
  main {
    padding: 48px;
  }

  .container {
    flex-direction: column;
  }

  .left-container {
    margin-top: 0;
    flex: 0 0 80px;
  }

  .navigation-items {
    flex-direction: row;
    justify-content: space-between;
  }

  #devin-image {
    width: 150px;
    height: 150px;
  }

  h1 {
    font-size: 48px;
  }
}

@media screen and (max-width: 480px) {
  main {
    padding: 24px;
  }
}
